# PostgreSQL Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=zcash_explorer_mainnet
DB_USER=zcash_user
DB_PASSWORD=CHANGE_THIS_PASSWORD

# Zebra RPC Configuration (Mainnet)
ZEBRA_RPC_URL=http://127.0.0.1:8232
ZEBRA_RPC_COOKIE_FILE=/root/.cache/zebra/.cookie

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379

# Network
NETWORK=mainnet

# API Server Configuration
PORT=3001
NODE_ENV=production

# CORS Origins (add your frontend domains)
CORS_ORIGINS=https://cipherscan.app,https://api.cipherscan.app

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=300
